{
  "version": "THYREN_FLOW_QUIZ_2.1_MINIMAL_VOUS",
  "description": "Quiz simplifié – raisonnement clinique discret. Questions claires, peu de texte, choix multiples pour plus d’intelligence perçue.",
  "flow_order": ["Q1","Q2","Q2_plus","Q3","Q4","Q4b","Q5","CLINICAL_QUESTIONS","Q_EMAIL","RESULT"],
  "nodes": {
    "Q1": {
      "id": "Q1",
      "type": "open",
      "text": "Pour commencer, quel est votre prénom ?",
      "next": "Q2",
      "meta": { "capture": "first_name" }
    },
    "Q2": {
      "id": "Q2",
      "type": "choices",
      "text": "Quel est votre sexe biologique ?",
      "choices": ["Femme","Homme"],
      "next_map": { "Femme": "Q2_plus", "Homme": "Q3" },
      "meta": { "capture": "sex" }
    },
    "Q2_plus": {
      "id": "Q2_plus",
      "type": "choices",
      "text": "Êtes-vous enceinte ou allaitante ?",
      "choices": ["Oui","Non"],
      "next": "Q3",
      "meta": { "capture": "enceinte" }
    },
    "Q3": {
      "id": "Q3",
      "type": "choices",
      "text": "Quel est votre âge ?",
      "choices": ["Moins de 30 ans","30-45 ans","45-60 ans","Plus de 60 ans"],
      "next": "Q4",
      "meta": { "capture": "age_band" }
    },
    "Q4": {
      "id": "Q4",
      "type": "choices",
      "text": "Avez-vous une allergie, une condition médicale, ou prenez-vous un traitement ou des compléments alimentaires ?",
      "choices": [
        "Non, rien à signaler",
        "Oui, allergie ou condition médicale",
        "Oui, traitement ou compléments"
      ],
      "next_map": {
        "Non, rien à signaler": "Q5",
        "Oui, allergie ou condition médicale": "Q4b",
        "Oui, traitement ou compléments": "Q4b"
      },
      "meta": { "capture": "safety_flag" }
    },
    "Q4b": {
      "id": "Q4b",
      "type": "open",
      "text": "Merci de préciser.",
      "next": "Q5",
      "meta": { "capture": "safety_details" }
    },
    "Q5": {
      "id": "Q5",
      "type": "open",
      "text": "Expliquez en quelques mots ce qui vous gêne en ce moment et ce que vous aimeriez améliorer.",
      "next": "CLINICAL_QUESTIONS",
      "meta": { "capture": "plainte_client" }
    },
    "CLINICAL_QUESTIONS": {
      "id": "CLINICAL_QUESTIONS",
      "type": "ai_driven",
      "description": "Questions cliniques ciblées, simples, avec plusieurs choix pour affiner le profil sans alourdir l’expérience.",
      "rules": [
        "THYREN analyse plainte_client et identifie 2 à 3 axes fonctionnels probables",
        "THYREN pose 4 à 6 questions maximum",
        "Chaque question propose 3 à 5 choices clairs (jamais Oui/Non uniquement)",
        "Aucune pédagogie longue dans le quiz",
        "Une seule phrase maximum avant la question si nécessaire, sinon question directe",
        "Ne jamais afficher {{AI_PREV_INTERPRETATION}}",
        "Ne jamais reformuler les informations factuelles",
        "Quand l’axe prioritaire est identifié, passer à Q_EMAIL"
      ],
      "next": "Q_EMAIL",
      "meta": { "mode": "clinical_reasoning_minimal" }
    },
    "Q_EMAIL": {
      "id": "Q_EMAIL",
      "type": "open",
      "text": "Merci pour toutes vos réponses. Quelle est votre adresse e-mail pour recevoir votre analyse et les cures recommandées ?",
      "next_on_valid": "RESULT",
      "next_on_skip": "RESULT",
      "validation": {
        "type": "email_regex",
        "pattern": "^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,}$"
      },
      "meta": { "capture": "email" }
    },
    "RESULT": {
      "id": "RESULT",
      "type": "terminal",
      "action": "generate_report",
      "description": "Résultats et recommandations finales"
    }
  },
  "engine_hints": {
    "state_model": { "current_id": "string", "answers": "map", "history": "array" },
    "clinical_mode": "raisonnement clinique discret, orienté décision",
    "max_clinical_questions": 6,
    "quiz_tone": {
      "vouvoiement": true,
      "verbosity": "low",
      "choices_min": 3
    }
  }
}

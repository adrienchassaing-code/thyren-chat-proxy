    var productUrl = getProductUrlFromCtas(ctaParsed.ctas) || getFirstProductUrlFromText(rawText);

    // Fallback CTA
    if ((!ctaParsed.ctas || !ctaParsed.ctas.length) && productUrl) {
      ctaParsed.ctas = [
        { label: "Commander ma cure", url: productUrl },
        { label: "Ajouter au panier", url: productUrl },
        { label: "En savoir plus", url: productUrl }
      ];
    }

    // 4) Nettoyage texte
    var text = String(ctaParsed.text || "");
    text = stripProductMarkdownLinks(text);
    text = stripPlainProductUrlsAndIds(text);
    text = text.replace(/===BLOCK===/g, "").trim();

    // 5) Détection cure
    var hasCompat = /compatibilit/i.test(text);
    var hasCtaCure = (ctaParsed.ctas || []).some(function(x){
      return x && x.label && /commander ma cure|ajouter au panier|en savoir plus/i.test(x.label);
    });

    var isCure = (hasCompat || hasCtaCure) && (productUrl || (imgs && imgs.length > 0));

    if (!isCure){
      var safe0 = escapeHTML(text).replace(/\n/g, "<br>");
      bubbleEl.innerHTML = linkifyMarkdownHttpsOnly(safe0);
      return;
    }

    bubbleEl.classList.add("thyren-has-cure");

    // 6) Image
    var imgUrl = (imgs && imgs.length) ? imgs[0] : "";
    var productData = null;

    if (!imgUrl && productUrl){
      var handle = getHandleFromProductUrl(productUrl);
      if (handle){
        productData = await fetchProductPreview(handle);
        if (productData && productData.image) imgUrl = productData.image;
      }
    }

    bubbleEl.innerHTML = "";

    var card = document.createElement("div");
    card.className = "thyren-cure-card";

    var media = document.createElement("div");
    media.className = "thyren-cure-media";

    if (imgUrl){
      var img = document.createElement("img");
      img.src = imgUrl;
      img.loading = "lazy";
      img.alt = "Cure";
      media.appendChild(img);
    } else {
      media.style.display = "none";
      card.style.gridTemplateColumns = "1fr";
    }

    var body = document.createElement("div");
    body.className = "thyren-cure-body";

    var lines = text.split("\n").map(function(l){ return String(l||"").trim(); }).filter(function(x){ return x.length; });

    var title = (productData && productData.title) ? productData.title : (lines[0] || "Cure");

    var compat = "";
    for (var i=0;i<lines.length;i++){
      if (/^compatibilit/i.test(lines[i])) { compat = lines[i]; break; }
    }

    function findIndex(re){
      for (var k=0;k<lines.length;k++) if (re.test(lines[k])) return k;
      return -1;
    }

    var idxWhyTitle = findIndex(/^(?:[-–•]\s*)?pourquoi cette cure est propos/i);
    var idxEffectsTitle = findIndex(/^(?:[-–•]\s*)?(b[ée]n[ée]fices fonctionnels attendus|b[ée]n[ée]fices|a quoi elle va servir)/i);
    var idxPosoTitle = findIndex(/^(?:[-–•]\s*)?(conseils de prise|comment bien prendre|posologie)/i);

    function collectBetween(startIdx, endIdx){
      if (startIdx < 0) return "";
      var from = startIdx + 1;
      var to = (endIdx >= 0 ? endIdx : lines.length);
      return lines.slice(from, to).join(" ").trim();
    }

    var why = collectBetween(idxWhyTitle, idxEffectsTitle);
    var effects = collectBetween(idxEffectsTitle, idxPosoTitle);

    var posoLines = [];
    if (idxPosoTitle >= 0){
      for (var p = idxPosoTitle + 1; p < lines.length; p++){
        var ln = lines[p];
        if (/^\[?commander ma cure\]?/i.test(ln)) break;
        if (/^(–|-)\s*/.test(ln) || /dur[ée]e recommand[ée]e|moment de prise|composition/i.test(ln)){
          posoLines.push(ln.replace(/^\s*[–-]\s*/,"").trim());
        }
      }
    }

    var titleEl = document.createElement("div");
    titleEl.className = "thyren-cure-title";
    titleEl.textContent = title;

    body.appendChild(titleEl);

    if (compat){
      var compatEl = document.createElement("div");
      compatEl.className = "thyren-cure-compat";
      compatEl.textContent = compat;
      body.appendChild(compatEl);
    }

    function addLabel(text){
      var l = document.createElement("div");
      l.className = "thyren-cure-label";
      l.textContent = text;
      body.appendChild(l);
    }

    function addText(text){
      var t = document.createElement("div");
      t.className = "thyren-cure-text";
      t.textContent = String(text || "").trim();
      body.appendChild(t);
    }

    if (why){
      addLabel("Pourquoi cette cure est proposée :");
      addText(why);
    }

    if (effects){
      addLabel("Bénéfices fonctionnels attendus :");
      addText(effects);
    }

    if (posoLines && posoLines.length){
      addLabel("Conseils de prise (posologie) :");
      addText(posoLines.map(function(x){ return "– " + String(x||"").trim(); }).join("\n"));
    }

    if (ctaParsed.ctas && ctaParsed.ctas.length){
      var ctaWrap = document.createElement("div");
      ctaWrap.className = "thyren-options";

      ctaParsed.ctas.forEach(function(cta){
        var btn = document.createElement("button");
        btn.type = "button";
        btn.className = "thyren-option-btn";
        btn.textContent = cta.label;

        btn.dataset.thyrenKind = "cta";
        btn.dataset.thyrenLabel = cta.label;
        btn.dataset.thyrenUrl = cta.url;
        btn.dataset.thyrenProductUrl = productUrl || cta.url;

        ctaWrap.appendChild(btn);
      });

      body.appendChild(ctaWrap);
    }

    card.appendChild(media);
    card.appendChild(body);
    bubbleEl.appendChild(card);
  }

  function shouldWideBot(text){
    text = String(text || "");
    if (text.length >= 120) return true;
    if (text.indexOf("\n") !== -1) return true;
    return false;
  }

  function createMsgWrap(role){
    var wrap = document.createElement('div');
    wrap.className = 'thyren-msg ' + role;
    return wrap;
  }

  function typeWriterAddBotMessage(text, done){
    if (!text) { if (done) done(); return null; }
    text = String(text).replace(/\*/g, "");

    var wrap = createMsgWrap('bot');
    var bubble = document.createElement('div');
    bubble.className = 'thyren-bubble' + (shouldWideBot(text) ? ' thyren-wide' : '');
    wrap.appendChild(bubble);

    threadEl.appendChild(wrap);
    scrollBottomOnce();

    typeWriterOnElement(bubble, text, 12, function(){
      renderRichBubble(bubble, text).catch(function(){});
      saveUiState();
      if (typeof done === "function") done();
    });
    return wrap;
  }

  function addUserMessage(text){
    if (!text) return;
    var wrap = createMsgWrap('user');
    var bubble = document.createElement('div');
    bubble.className = 'thyren-bubble';
    bubble.textContent = text;
    wrap.appendChild(bubble);
    threadEl.appendChild(wrap);
    scrollBottomOnce();
    saveUiState();
  }

  function displayTextAsBlockBubbles(text){
    text = String(text || "").trim();
    if (!text) return;

    var blocks = text
      .split("===BLOCK===")
      .map(function(b){ return b.trim(); })
      .filter(Boolean);

    if (!blocks.length){
      typeWriterAddBotMessage(text);
      return;
    }

    function showNext(i){
      if (i >= blocks.length) return;
      typeWriterAddBotMessage(blocks[i], function(){ showNext(i + 1); });
    }
    showNext(0);
  }

  function addWelcomeButtons(){
    var wrap = createMsgWrap('bot');
    var options = document.createElement('div');
    options.className = 'thyren-options';

    var choices = [
      { label: "Ma thyroïde fonctionne-t-elle normalement ?", payload: "Est-ce que j'ai des symptômes d'hypothyroïdie ?" },
      { label: "Trouver la cure dont j'ai besoin", payload: "Trouver la cure dont j'ai besoin" },
      { label: "J'ai une question - SAV", payload: "J'ai une question - SAV" },
      { label: "Qu'en pense le Dr Résimont", payload: "Qu'en pense le Dr Résimont" }
    ];

    choices.forEach(function(choice){
      var btn = document.createElement('button');
      btn.type = 'button';
      btn.className = 'thyren-option-btn';
      btn.textContent = choice.label;
      btn.dataset.thyrenKind = "welcome";
      btn.dataset.thyrenPayload = choice.payload;
      options.appendChild(btn);
    });

    wrap.appendChild(options);
    threadEl.appendChild(wrap);
    scrollBottomOnce();
    saveUiState();
  }

  function addQuestionWithChoices(questionText, choices, contextProductUrl){
    var cleanQ = (questionText || '')
      .replace(/\*/g, "")
      .replace(/\s+/g, " ")
      .trim();

    var wrap = createMsgWrap('bot');

    var bubble = document.createElement('div');
    bubble.className = 'thyren-bubble' + (shouldWideBot(cleanQ) ? ' thyren-wide' : '');
    wrap.appendChild(bubble);

    var options = document.createElement('div');
    options.className = 'thyren-options';
    options.style.opacity = '0';
    options.style.pointerEvents = 'none';

    var buttons = [];

    (choices || []).forEach(function(choice){
      var cleanLabel = String(choice || '').replace(/\*/g, "").replace(/\s+/g, ' ').trim();
      if (!cleanLabel) return;

      var btn = document.createElement('button');
      btn.type = 'button';
      btn.className = 'thyren-option-btn';
      btn.textContent = '';

      if (isCtaLabel(cleanLabel) && contextProductUrl){
        btn.textContent = cleanLabel;
        btn.dataset.thyrenKind = "cta";
        btn.dataset.thyrenLabel = cleanLabel;
        btn.dataset.thyrenProductUrl = String(contextProductUrl || "");
        btn.dataset.thyrenUrl = String(contextProductUrl || "");
      } else {
        btn.dataset.thyrenKind = "choice";
        btn.dataset.thyrenPayload = cleanLabel;
        btn.dataset.thyrenLabel = cleanLabel;
      }

      buttons.push(btn);
      options.appendChild(btn);
    });

    wrap.appendChild(options);
    threadEl.appendChild(wrap);
    scrollBottomOnce();

    typeWriterOnElement(bubble, cleanQ, 12, function(){
      options.style.opacity = '1';
      options.style.pointerEvents = 'auto';

      (function typeButtonsSequentially(idx){
        idx = idx || 0;
        if (idx >= buttons.length) return;
        var b = buttons[idx];
        var label = (b.dataset.thyrenLabel || b.textContent || "").replace(/\*/g, "");
        if (b.textContent) { typeButtonsSequentially(idx+1); return; }
        typeWriterOnElement(b, label, 10, function(){ typeButtonsSequentially(idx + 1); });
      })(0);

      scrollBottomOnce();
      saveUiState();
    });
  }

  messagesEl.addEventListener("click", async function(e){
    var btn = e.target && e.target.closest ? e.target.closest(".thyren-option-btn") : null;
    if (!btn || !messagesEl.contains(btn)) return;

    e.preventDefault();

    var kind = String(btn.dataset.thyrenKind || "").toLowerCase();
    var label = btn.dataset.thyrenLabel || btn.textContent || "";
    var url = btn.dataset.thyrenUrl || "";
    var productUrl = btn.dataset.thyrenProductUrl || "";
    var payload = btn.dataset.thyrenPayload || btn.dataset.thyrenLabel || btn.textContent || "";

    enableAutoScroll();
    scrollBottomOnce();

    if (kind === "cta" || isCtaLabel(label)){
      var effectiveProductUrl = productUrl || url || "";
      await handleCtaUrl(url || effectiveProductUrl, effectiveProductUrl, label);
      return;
    }

    if (kind === "choice" || kind === "welcome"){
      if (isWaiting) return;
      var txt = String(payload || "").trim();
      if (!txt) return;

      if (!started) { started = true; enterChatMode(); }

      var lower = txt.toLowerCase();
      if (lower.indexOf("trouver la cure") !== -1) startLocalQuiz("cure");
      if (lower.indexOf("sympt") !== -1 && lower.indexOf("hypothy") !== -1) startLocalQuiz("thyroide");

      addUserMessage(txt);
      sendToBot(txt);
      return;
    }
  }, { passive: false });

  document.addEventListener("click", function(e){
    if (!menuEl) return;
    if (!menuEl.contains(e.target)) menuEl.removeAttribute("open");
  });

  function getConversationPlainText(){
    var lines = [];
    var msgs = threadEl.querySelectorAll(".thyren-msg");
    msgs.forEach(function(msg){
      var isUser = msg.classList.contains("user");
      var who = isUser ? "Vous" : "THYREN";
      var bubble = msg.querySelector(".thyren-bubble");
      if (!bubble) return;

      var txt = (bubble.innerText || bubble.textContent || "").trim();
      if (!txt) return;

      lines.push(who + " : " + txt);
      lines.push("");
    });
    return lines.join("\n");
  }

  function downloadConversationAsWord(){
    try{
      var title = "Transcription THYREN";
      var content = getConversationPlainText().replace(/\n/g, "<br>");

      var html =
        '<html><head><meta charset="utf-8"></head><body>' +
        '<h2 style="font-family:Arial">' + title + '</h2>' +
        '<div style="font-family:Arial; font-size:12pt; line-height:1.5">' + content + '</div>' +
        '</body></html>';

      var blob = new Blob([html], { type: "application/msword;charset=utf-8" });
      var url = URL.createObjectURL(blob);

      var a = document.createElement("a");
      a.href = url;
      a.download = "thyren-discussion.doc";
      document.body.appendChild(a);
      a.click();
      a.remove();

      setTimeout(function(){ URL.revokeObjectURL(url); }, 2000);

      thyrenToast("Téléchargement lancé ✓");
    } catch(e){
      console.error(e);
      thyrenToast("Impossible d'enregistrer");
    }
  }

  Array.prototype.forEach.call(menuItems, function(btn){
    btn.addEventListener("click", function(){
      var action = btn.getAttribute("data-action");
      if (menuEl) menuEl.removeAttribute("open");

      if (action === "reset") {
        enableAutoScroll();
        chatHistory = [];
        threadEl.innerHTML = "";

        try{
          localStorage.removeItem(LS_KEY_UI);
          localStorage.removeItem(LS_KEY_MODE);
          localStorage.removeItem(LS_KEY_PROGRESS);
        }catch(e){}

        hideProgressUi();
        stopLocalQuiz();

        quizStarted = false;
        started = false;
        rootEl.classList.remove("thyren-started");
        questionIndex = 0;

        placeFormTop();
        addWelcomeButtons();
        thyrenToast("Discussion effacée ✓");
        return;
      }

      if (action === "download") {
        downloadConversationAsWord();
        return;
      }

      if (action === "sav") {
        enableAutoScroll();

        try{ localStorage.removeItem(LS_KEY_PROGRESS); }catch(e){}
        hideProgressUi();
        stopLocalQuiz();

        quizStarted = false;
        questionIndex = 0;

        if (!started) { started = true; enterChatMode(); }
        addUserMessage("J'ai une question - SAV");
        sendToBot("J'ai une question - SAV");
        return;
      }
    });
  });

  async function sendToBot(userText) {
    try {
      var sid = localStorage.getItem("thyren_sid") || conversationId;
      var imgQ = new Image();
      imgQ.src = "https://thyren-chat-proxy.vercel.app/api/beacon?type=qpd&sid=" + encodeURIComponent(sid) + "&t=" + Date.now();
    } catch(e) {}

    if (!userText || isWaiting) return;

    if (!started) { started = true; enterChatMode(); }

    isWaiting = true;
    showTyping();

    chatHistory.push({ role: 'user', content: userText });

    try {
      var res = await fetch(API_ENDPOINT, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ messages: chatHistory, conversationId: conversationId })
      });

      var raw = await res.text();
      var data = null;
      try { data = JSON.parse(raw); } catch(e){ data = null; }

      if (!res.ok) {
        console.error("THYREN API error:", res.status, raw);
        hideTyping();
        typeWriterAddBotMessage("Erreur serveur ("+res.status+"). Ouvre la console pour voir le détail.");
        return;
      }

      if (!data || typeof data !== "object") {
        console.error("THYREN invalid JSON:", raw);
        hideTyping();
        typeWriterAddBotMessage("Réponse invalide du serveur. Ouvre la console pour voir le détail.");
        return;
      }

      var replyText = (data.reply ? String(data.reply) : "").trim();

      hideTyping();

      if (!replyText) {
        typeWriterAddBotMessage("Je n'ai pas reçu de réponse exploitable, tu peux réessayer ?");
        return;
      }

      chatHistory.push({ role: 'assistant', content: replyText });

      var parsed = null;
      try { parsed = JSON.parse(replyText); } catch (e) { parsed = null; }

      if (!parsed || typeof parsed !== 'object') {
        typeWriterAddBotMessage(replyText);
        scrollBottomOnce();
        saveUiState();
        return;
      }

      var msgType = parsed.type;
      var msgText = parsed.text || "";
      var msgChoices = Array.isArray(parsed.choices) ? parsed.choices : [];
      var meta = (parsed && parsed.meta && typeof parsed.meta === "object") ? parsed.meta : null;

      if (meta && meta.progress){
        applyMetaProgress(meta);
        if (meta.progress.enabled) stopLocalQuiz();
      } else {
        if (localQuizActive && msgType === "question"){
          localCur = Math.min(localTot, localCur + 1);
          if (qcurEl) qcurEl.textContent = String(localCur);
          if (etaEl) etaEl.textContent = computeEtaLabel(localCur, localTot);
          showProgressUi();

          try {
            localStorage.setItem(LS_KEY_PROGRESS, JSON.stringify({
              local: true,
              localQuizActive: true,
              localQuizType: localQuizType,
              current: localCur,
              total: localTot,
              eta_label: (etaEl ? etaEl.textContent : "—")
            }));
          } catch(e){}
        }
      }

      if (msgType === 'question') {
        if (msgChoices.length > 0) addQuestionWithChoices(msgText, msgChoices, null);
        else typeWriterAddBotMessage(msgText);
      } else if (msgType === 'reponse' || msgType === 'resultat') {
        var normalized = normalizeToEightBlocks(msgText);
        displayTextAsBlockBubbles(normalized);
        if (msgChoices.length > 0) addQuestionWithChoices("", msgChoices, null);
      } else {
        typeWriterAddBotMessage(msgText || replyText);
      }

      saveUiState();

    } catch (err) {
      console.error("THYREN fetch error:", err);
      hideTyping();
      var msg = "Erreur de communication avec THYREN.";
      if (err && err.message) msg += " (" + err.message + ")";
      typeWriterAddBotMessage(msg);
    } finally {
      isWaiting = false;
    }
  }

  formEl.addEventListener('submit', function (e) {
    e.preventDefault();
    var text = inputEl.value.trim();
    if (!text || isWaiting) return;

    enableAutoScroll();
    scrollBottomOnce();

    addUserMessage(text);
    inputEl.value = '';
    sendToBot(text);
  });

  placeFormTop();
  var restored = restoreUiState();
  if (!restored) addWelcomeButtons();

  if (!localQuizActive) {
    try{
      var raw = localStorage.getItem(LS_KEY_PROGRESS);
      if (!raw) hideProgressUi();
    }catch(e){ hideProgressUi(); }
  }
})();
</script>
